<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_comchain" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.comchain</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="99" />
        <field name="groups_id" eval="[(4, ref('lcc_comchain_base.group_comchain_manager'))]" />
        <field name="inherit_id"
            ref="lcc_lokavaluto_app_connection.res_config_settings_view_form_digital_currency" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='app_connection_settings']" position="after">
                <h2>Comchain service configuration</h2>
                <div class="row mt16 o_settings_container" id="comchain_selection_settings">
                    <div class="col-12 col-lg-6 o_setting_box" id="comchain_currency_name">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <label for="comchain_currency_name" />
                            <div>
                                <field name="comchain_currency_name" />
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="comchain_default_wallet">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <label for="config_comchain_delegated_wallet" />
                            <div>
                                <field name="config_comchain_delegated_wallet" />
                            </div>
                            <label for="config_comchain_delegated_pwd" />
                            <div>
                                <field name="config_comchain_delegated_pwd" />
                            </div>
                            <label for="config_comchain_stock_id" />
                            <div>
                                <field name="config_comchain_stock_id" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>