<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="lcc_comchain_partner_form" model="ir.ui.view">
        <field name="name">lcc_comchain_partner_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="lcc_members.main_members_view"/>
        <field eval="99" name="priority"/>
        <field name="arch" type="xml">
            <button name="toggle_active" position="before">
                <button type="object" class="oe_stat_button" icon="fa-bank" name="addcomchainUser">
                     <field name="comchain_active" widget="boolean_button" options="{&quot;terminology&quot;: {'string_true': 'Comchain OK', 'hover_true': 'Desactive', 'string_false': 'No comchain', 'hover_false': 'Activate comchain'}}"/>
                </button>
            </button>
            <page name="accounting" position="after">
                <page name="comchain" string="Comchain" attrs="{'invisible': [('is_company','=',False),('parent_id','!=',False)]}">
                    <group>
                        <group>
                            <field name="comchain_id" readonly="1"/>
                            <field name="comchain_wallet" readonly="1"/>
                            <field name="comchain_message_key" readonly="1"/>
                            <field name="comchain_status" readonly="1"/>
                        </group>
                        <group>
                            <field name="comchain_type" readonly="1"/>
                            <field name="comchain_credit_min" readonly="1"/>
                            <field name="comchain_credit_max" readonly="1"/>
                        </group>
                    </group>
                </page>
                <page name="comchain_disabled" string="Comchain" attrs="{'invisible': ['|',('is_company','=',True),('parent_id','=',False)]}">
                    <div>
                        <p>
                            LCC account related settings are managed on
                            <button name="open_commercial_member_entity" type="object" string="the parent company" class="oe_link"/>
                        </p>
                    </div>
                </page>
            </page>
        </field>
    </record>
</odoo>
