<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_invoices_lcc" name="Payment on My LCC Invoices"
        inherit_id="account.portal_my_invoices">
        <xpath expr="//t[@t-call='portal.portal_table']/thead/tr/th[hasclass('d-md-table-cell')]"
            position="replace" />
        <xpath expr="//t[@t-call='portal.portal_table']/thead/tr/th[last()]" position="replace">
            <th class="text-right">Total amount</th>
        </xpath>
        <xpath expr="//t[@t-foreach='invoices']/tr/td[hasclass('d-md-table-cell')]"
            position="replace" />
        <xpath expr="//t[@t-foreach='invoices']/tr/td[last()]" position="replace">
            <td class="text-right">
                <span t-out="invoice.amount_total"
                    t-options='{"widget": "monetary", "display_currency": invoice.currency_id}' />
            </td>
        </xpath>
    </template>
</odoo>