<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_layout" name="Portal layout: profile menu entries" inherit_id="portal.portal_breadcrumbs" priority="40">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'profile' or profile" t-attf-class="breadcrumb-item #{'active ' if not profile else ''}">
                <a t-if="profile" t-attf-href="/my/profiles?{{ keep_query() }}">Profiles</a>
                <t t-else="">Profiles</t>
            </li>
            <li t-if="profile" class="breadcrumb-item active">
                <t t-esc="profile.name"/>
            </li>
        </xpath>
    </template>

    <template id="portal_my_home" name="Portal My Home: profile entries" inherit_id="portal.portal_my_home" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-if="profile_count" t-call="portal.portal_docs_entry">
                <t t-set="title">Profiles</t>
                <t t-set="url" t-value="'/my/profiles'"/>
                <t t-set="count" t-value="profile_count"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_profiles" name="My Profiles">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Profiles</t>
            </t>
            <t t-if="not profiles">
                <div class="alert alert-warning mt8" role="alert">
                    There are no profiles.
                </div>
            </t>
            <t t-if="profiles" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>
                            <span class='d-none d-md-inline'>Profile name</span>
                        </th>
                        <th class="text-right">Profile type</th>
                        <th class="text-right">Position</th>
                        <th class="text-right">Company</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="profiles" t-as="profile">
                        <td>
                            <a t-attf-href="/my/profile/#{profile.id}?{{ keep_query() }}"><span t-field="profile.name"/></a>
                        </td>
                        <td class="text-right"><span t-field="profile.partner_profile"/></td>
                        <td class="text-right"><span t-field="profile.function"/></td>
                        <td class="text-right"><span t-field="profile.parent_id"/></td>
                    </tr>
                </tbody>
            </t>
        </t>
    </template>

    <template id="portal_my_profile" name="My Profile">
        <t t-call="portal.portal_layout">
            <t t-set="o_portal_fullwidth_alert" groups="profile.group_profile_user">
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url" t-value="'/web#return_label=Website&amp;model=res.partner&amp;id=%s&amp;view_type=form' % (profile.id)"/>
                </t>
            </t>

            <t t-call="portal.portal_record_layout">
                <t t-set="card_header">
                    <h5 class="mb-0">
                        <div>
                            <strong><span t-field="profile.name"/></strong>
                            <small class="text-muted"> - <span t-field="profile.partner_profile"/></small>
                        </div>
                        <div t-if="profile.partner_profile and (profile.partner_profile.name == 'Position')"> <!-- TODO: change partner_profile.name by partner_profile.ref when code available -->>
                            <span t-field="profile.function"/>
                            <small class="text-muted"> in </small>
                            <span t-field="profile.parent_id"/>
                        </div>
                    </h5>
                    <div t-if="profile.partner_profile and (profile.partner_profile.name == 'Position')"> <!-- TODO: change partner_profile.name by partner_profile.ref when code available -->
                        <br/>
                        <ul class="col-12 col-md-6 pb-2" style= "list-style-type:none">
                            <li><span t-field="profile.street"/></li>
                            <li><span t-field="profile.zip"/></li>
                            <li><span t-field="profile.city"/></li>
                            <li><span t-field="profile.country_id"/></li>
                        </ul>
                    </div>
                </t>
                <t t-set="card_body">
                    <!-- Body for Position partner profiles-->
                    <div t-if="profile.partner_profile and (profile.partner_profile.name == 'Position')"> <!-- TODO: change partner_profile.name by partner_profile.ref when code available -->
                        <!-- Editable data -->
                        <div class="row mb-4">
                            <ul class="col-12 col-md-6 pb-2">
                                <li><strong>Job Position: </strong><span t-field="profile.function"/></li>
                                <li><strong>Phone: </strong><span t-field="profile.phone"/></li>
                                <li><strong>Mobile: </strong><span t-field="profile.mobile"/></li>
                                <li><strong>Email: </strong><span t-field="profile.email"/></li>
                                <li><strong>Website: </strong><span t-field="profile.website"/></li>
                            </ul>
                        </div>
                    </div>
                    <!-- Body for Position ppartner profiles-->
                    <div t-if="profile.partner_profile and (profile.partner_profile.name == 'Public profile')"> <!-- TODO: change partner_profile.name by partner_profile.ref when code available -->
                        <!-- Editable data -->
                        <div class="row mb-4">
                            <ul class="col-12 col-md-6 pb-2">
                                <li><strong>Description: </strong><span t-field="profile.website_description"/></li>
                            </ul>
                        </div>
                        <div class="row mb-4">
                            <ul class="col-12 col-md-6 pb-2">
                                <li><strong>Street: </strong><span t-field="profile.street"/></li>
                                <li><strong>ZIP: </strong><span t-field="profile.zip"/></li>
                                <li><strong>City: </strong><span t-field="profile.city"/></li>
                                <li><strong>Country: </strong><span t-field="profile.country_id"/></li>
                            </ul>
                            <ul class="col-12 col-md-6 pb-2">
                                <li><strong>Phone: </strong><span t-field="profile.phone"/></li>
                                <li><strong>Mobile: </strong><span t-field="profile.mobile"/></li>
                                <li><strong>Email: </strong><span t-field="profile.email"/></li>
                                <li><strong>Website: </strong><span t-field="profile.website"/></li>
                            </ul>
                            <ul class="col-12 col-md-6 pb-2">
                                <li><strong>Local group: </strong><span t-field="profile.team_id"/></li>
                                <li><strong>Subscription number: </strong><span t-field="profile.ref"/></li>
                                <li><strong>Is volunteer: </strong><span t-field="profile.is_volunteer"/></li>
                                <li><strong>Subscription reason: </strong><span t-field="profile.reasons_choosing_mlc"/></li>
                            </ul>
                            <ul class="col-12 col-md-6 pb-2">
                                <li><strong>Main activity: </strong><span t-field="profile.industry_id"/></li>
                                <li><strong>Other activities: </strong><span t-field="profile.secondary_industry_ids"/></li>
                                <li><strong>Detailed activity: </strong><span t-field="profile.detailed_activity"/></li>
                                <li><strong>Itinerant: </strong><span t-field="profile.itinerant"/></li>
                            </ul>
                            <ul class="col-12 col-md-6 pb-2">
                                <li><strong>Accept coupons: </strong><span t-field="profile.accept_coupons"/></li>
                                <li><strong>Accept digital currency: </strong><span t-field="profile.accept_digital_currency"/></li>
                            </ul>
                            <ul class="col-12 col-md-6 pb-2">
                                <li><strong>Professional phone: </strong><span t-field="profile.phone_pro"/></li>
                                <li><strong>Opening time: </strong><span t-field="profile.opening_time"/></li>
                                <li><strong>Discount: </strong><span t-field="profile.discount"/></li>
                            </ul>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
