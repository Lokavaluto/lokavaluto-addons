<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_home_registration_menu" name="Portal My Home: Registration Menu" inherit_id="portal.portal_my_home" priority="40">
        <xpath expr="//div[@id='oe_structure_portal_my_home_1']" position="inside">
            <h3>Registration options</h3>
            <div>
                <button class="btn btn-primary mb32 btn-link">
                    <a t-attf-href="/my/private_registration">
                        Subscribe yourself
                        <span class="fa fa-long-arrow-right" />
                    </a>
                </button>
            </div>
            <div>
                <button class="btn btn-primary mb32 btn-link">
                    <a t-attf-href="/my/organization_registration">
                        Register your organisation
                        <span class="fa fa-long-arrow-right" />
                    </a>
                </button>
            </div>
            <div>
                <button class="btn btn-primary mb32 btn-link">
                    <a t-attf-href="/my/affiliation_request">
                        Ask for an affiliation
                        <span class="fa fa-long-arrow-right" />
                    </a>
                </button>
            </div>
        </xpath>
    </template>

</odoo>