<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_private_registration" name="Portal: Private Registration">
        <t t-call="portal.portal_layout">
            <!-- <t t-set="breadcrumbs_searchbar" t-value="True" /> -->
            <t t-set="additional_title">Private Registration</t>
            <form action="/membership/subscribe_member" method="post">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                <h3>
                    <br />
                    Private registration Form
                </h3>
                <h4>
                    <br />
                    Who are you?
                </h4>
                <div class="row">
                    <div t-attf-class="form-group #{error.get('title') and 'o_has_error' or ''} col-xl-6">
                        <label class="col-form-label" for="title">Gender</label>
                        <select name="title" class="form-control">
                            <option value="">Title...</option>
                            <t t-foreach="titles or []" t-as="title">
                                <option t-att-value="title.id" t-att-selected="title.id == int(title) if title else title.id == partner.title.id">
                                    <t t-esc="title.name" />
                                </option>
                            </t>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div t-attf-class="form-group #{error.get('firstname') and 'o_has_error' or ''} col-xl-6">
                        <label class="col-form-label" for="firstname">First Name</label>
                        <input type="text" name="firstname" t-attf-class="form-control #{error.get('firstname') and 'is-invalid' or ''}" t-att-value="firstname or partner.firstname" required="True" />
                    </div>
                    <div t-attf-class="form-group #{error.get('lastname') and 'o_has_error' or ''} col-xl-6">
                        <label class="col-form-label" for="lastname">Last Name</label>
                        <input type="text" name="lastname" t-attf-class="form-control #{error.get('lastname') and 'is-invalid' or ''}" t-att-value="lastname or partner.lastname" required="True" />
                    </div>
                </div>
                <h4>
                    <br />
                    Contact information
                </h4>
                <div class="row">
                    <div t-attf-class="form-group #{error.get('street') and 'o_has_error' or ''} col-xl-6">
                        <label class="col-form-label" for="street">Street</label>
                        <input type="text" name="street" t-attf-class="form-control #{error.get('street') and 'is-invalid' or ''}" t-att-value="street or partner.street" required="True" />
                    </div>
                    <div t-attf-class="form-group #{error.get('street2') and 'o_has_error' or ''} col-xl-6">
                        <label class="col-form-label" for="street2">Street 2</label>
                        <input type="text" name="street2" t-attf-class="form-control #{error.get('street2') and 'is-invalid' or ''}" t-att-value="street2 or partner.street2" />
                    </div>
                    <div t-attf-class="form-group #{error.get('zipcode') and 'o_has_error' or ''} col-xl-6">
                        <label class="col-form-label" for="zipcode">Zip / Postal Code</label>
                        <input type="text" name="zipcode" t-attf-class="form-control #{error.get('zipcode') and 'is-invalid' or ''}" t-att-value="zipcode or partner.zip" required="True" />
                    </div>
                    <div t-attf-class="form-group #{error.get('city') and 'o_has_error' or ''} col-xl-6">
                        <label class="col-form-label" for="city">City</label>
                        <input type="text" name="city" t-attf-class="form-control #{error.get('city') and 'is-invalid' or ''}" t-att-value="city or partner.city" required="True" />
                    </div>
                    <div t-attf-class="form-group #{error.get('country_id') and 'o_has_error' or ''} col-xl-6">
                        <label class="col-form-label" for="country_id">Country</label>
                        <select name="country_id" t-attf-class="form-control">
                            <option value="">Country...</option>
                            <t t-foreach="countries or []" t-as="country">
                                <option t-att-value="country.id" t-att-selected="country.id == int(country_id) if country_id else country.id == partner.country_id.id">
                                    <t t-esc="country.name" />
                                </option>
                            </t>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div t-attf-class="form-group #{error.get('phone') and 'o_has_error' or ''} col-xl-6">
                        <label class="col-form-label" for="phone">Phone</label>
                        <input type="tel" name="phone" t-attf-class="form-control #{error.get('phone') and 'is-invalid' or ''}" t-att-value="phone or partner.phone" />
                    </div>
                    <div t-attf-class="form-group #{error.get('mobile') and 'o_has_error' or ''} col-xl-6">
                        <label class="col-form-label" for="mobile">Mobile</label>
                        <input type="tel" name="mobile" t-attf-class="form-control #{error.get('mobile') and 'is-invalid' or ''}" t-att-value="mobile or partner.mobile" />
                    </div>
                </div>
                <h4>
                    <br />
                    Membership information
                </h4>
                <div class="row">
                    <div t-attf-class="form-group #{error.get('team_id') and 'o_has_error' or ''} col-xl-6">
                        <label class="col-form-label" for="team_id">Local group</label>
                        <select name="team_id" t-attf-class="form-control">
                            <option value="">Local group...</option>
                            <t t-foreach="teams or []" t-as="team">
                                <option t-att-value="team.id" t-att-selected="team.id == int(team_id) if team_id else team.id == partner.team_id.id">
                                    <t t-esc="team.name" />
                                </option>
                            </t>
                        </select>
                    </div>
                    <div>
                        <div t-attf-class="form-group #{(error.get('want_newsletter_subscription') or error.get('accept_policy')) and 'o_has_error' or ''} col-xl-12">
                            <input type="checkbox" name="want_newsletter_subscription" t-att-checked="want_newsletter_subscription or partner.want_newsletter_subscription" />
                            <label class="col-form-label" for="want_newsletter_subscription">Subscribe to our newsletters</label>
                            <br />
                            <input type="checkbox" name="accept_policy" t-att-checked="accept_policy or partner.accept_policy" required="True" />
                            <label class="col-form-label" for="accept_policy">Accept Policy</label>
                        </div>
                    </div>
                    <div t-if="dynamic_price" t-attf-class="form-group #{error and 'total_membership' in error and 'has-error' or ''} col-xl-6">
                        <label class="col-form-label" for="total_membership">Registration fee amount</label>
                        <input type="number" step="any" class="form-control" name="total_membership" required="True" t-attf-value="#{total_membership or ''}" />
                    </div>
                </div>
                <div class="clearfix">
                    <br />
                    <button type="submit" class="btn btn-primary float-right mb32 ">
                        Submit
                        <span class="fa fa-long-arrow-right" />
                    </button>
                </div>
            </form>
        </t>
    </template>
</odoo>