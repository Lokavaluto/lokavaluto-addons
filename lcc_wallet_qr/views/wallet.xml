<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="wallet_form_qr_view" model="ir.ui.view">
        <field name="name">wallet.qr.form.view</field>
        <field name="model">res.partner.backend</field>
        <field name="inherit_id" ref="lcc_lokavaluto_app_connection.wallet_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="generate_qr" type="object" class="btn-box ml-3" icon="fa-qrcode">
                    Generate new QR
                </button>
            </xpath>
            <xpath expr="//field[@name='status']" position="after">
                <field name="qr" readonly="True" />
            </xpath>
        </field>
    </record>
</odoo>